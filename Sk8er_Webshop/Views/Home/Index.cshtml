@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<!--Carousel-->
<div class="container">
    <div class="d-flex justify-content-center">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Resources/Carrousel/SummerCollection.png" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <a asp-controller="Product" asp-action="Search" asp-route-search="Zomer">
                            <h3>De nieuwe zomercollectie is hier</h3>
                        </a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://www.texasmonthly.com/wp-content/uploads/2012/03/vogue-1250x0-c-default.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://static.adweek.com/adweek.com-prod/wp-content/uploads/2017/08/jennifer-lawrence-vogue-september-PAGE-2017.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<!--Jumbotron-->
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="line-vertical">
            <h1>Fashion starts here</h1>

            <p class="lead indent">De laatste trends in streatwear vind je bij Sk8er, met merken als Daily Paper, Vans en HUF</p>
        </div>
    </div>
</div>