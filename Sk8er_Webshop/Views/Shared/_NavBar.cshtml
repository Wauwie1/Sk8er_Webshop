
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <!--Logo row-->
    <div class="row">
        <div class="col"></div>

        <a asp-area="" asp-controller="Home" asp-action="Index"><div class="col"><img class="div-center" src="~/Resources/Sk8er_Logo.png" alt="Sk8er Logo" width="188" height="91" /></div></a>

        <div class="col"></div>
    </div>
    
    <!--Navbar row-->
    <div class="row">
        <div class="col ">
            <nav class="navbar sticky-top navbar-expand-lg navbar-light ">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="All">Alle Producten</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Categorieën
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a asp-controller="Product" asp-action="All" asp-route-category="Shirt" class="dropdown-item">Shirts</a>
                                <a asp-controller="Product" asp-action="All" asp-route-category="Broek" class="dropdown-item">Broeken</a>
                                <a asp-controller="Product" asp-action="All" asp-route-category="Trui" class="dropdown-item">Truien</a>
                                <a asp-controller="Product" asp-action="All" asp-route-category="Jas" class="dropdown-item">Jassen</a>

                            </div>
                        </li>
                    </ul>
                    <div class="form-inline my-2 my-lg-0">
                        <a asp-controller="Basket" asp-action="Overview"><img src="~/Resources/shopping-basket.png" width="40" height="40" style="margin-right: 15px;" /></a>
                    </div>
                    <!--Search bar-->
                    <form asp-controller="Product" asp-action="All" method="get" class="form-inline my-2 my-lg-0">
                        <input name="search" class="form-control mr-sm-2" type="search" placeholder="Zoek een product" aria-label="Search">
                        <button class="btn my-2 my-sm-0" type="submit">Zoek</button>
                    </form>

                </div>
            </nav>
        </div>
    </div>
</div>