@model Sk8er_Webshop.Models.Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<div class="container">
    
    <div class="row">
        <div class="col-lg-7">
            <img class="img-fluid" src=@Model.ImgURL alt="Photo Product" />
        </div>

        <div class="col">
            <br/>
            <h1>@Model.Name</h1>
            <p>@Model.Description</p>
            
            <form>
                <div class="form-group">
                    <label for="selectSize">Selecteer een maat:</label>
                    <select class="form-control" id="selectSize">
                        <option>XS</option>
                        <option>S</option>
                        <option>M</option>
                        <option>L</option>
                        <option>XL</option>
                    </select>
                    <br />
                    <h3>€@Model.Price</h3>
                    <br/>
                    <button type="button" class="btn btn-default">Toevoegen aan winkelmand</button>

                </div>
            </form>
        </div>
    </div>
</div>
<br/>

